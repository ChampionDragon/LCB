<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="6dp" />

            <solid android:color="@color/blue_deep" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <corners android:radius="6dp" />

            <solid android:color="@color/blue_deep" />
        </shape></item>
    <item><shape>
            <corners android:radius="6dp" />

            <stroke android:width="1dp" android:color="@color/blue_deep" />

            <gradient android:angle="135" android:centerX="200" android:centerY="222" android:endColor="@color/blueSky" android:startColor="@color/white" />
        </shape></item>

</selector>