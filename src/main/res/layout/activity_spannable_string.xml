<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout style="@style/tt">

        <TextView
            style="@style/tt_tv"
            android:layout_centerInParent="true"
            android:text="SpannableString"/>

        <ImageView
            android:id="@+id/back_spannable"
            style="@style/tt_iv"
            android:layout_alignParentLeft="true"
            android:background="@drawable/title_im"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="22dp">

        <TextView
            android:typeface="monospace"
            android:textStyle="italic"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="字体类型"
            android:textColor="@color/red"
            android:textSize="20sp"/>

        <Spinner
            android:background="@null"
            android:id="@+id/spannable_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            />
    </LinearLayout>

    <TextView
        android:typeface="monospace"
        android:layout_marginTop="166dp"
        android:gravity="center_horizontal"
        android:id="@+id/spannable_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/spannable_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btn_bg"
        android:text="确               定 "
        android:textColor="@color/white"/>

    <TextView
        android:layout_marginTop="33dp"
        android:text="这是会动的字哦！"
        android:gravity="center_horizontal"
        android:id="@+id/spannable_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"/>
</LinearLayout>